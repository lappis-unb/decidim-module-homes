<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>
  <div class="card-section">
    <div class="row column">
      <%= form.translated :editor, :body, lines: 30, label: t("models.components.body", scope: "decidim.homes.admin") %>

      <!-- Novos campos adicionados -->
      <%= form.file_field :banner, accept: 'image/*', label: t("models.components.banner", scope: "decidim.homes.admin") %>
      <%= form.check_box :statistics, label: t("models.components.statistics", scope: "decidim.homes.admin") %>
      <%= form.check_box :news, label: t("models.components.news", scope: "decidim.homes.admin") %>
      <%= form.number_field :news_id, label: t("models.components.news_id", scope: "decidim.homes.admin") %>
      <%= form.file_field :organizers, multiple: true, accept: 'image/*', label: t("models.components.organizers", scope: "decidim.homes.admin")%>
    </div>
  </div>
</div>
