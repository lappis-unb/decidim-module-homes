    <div>
      <%= link_to edit_home_element_path(element), method: :get, class: "button tiny hollow" do %>
        <%= icon "pencil", role: "img", "aria-hidden": true %>
      <% end %>
      <%= link_to home_element_path(element.id), method: :delete, class: "button tiny alert", data: { confirm: "VocÃª realmente deseja remover este elemento?" } do %>
        <%= icon "trash", role: "img", "aria-hidden": true %>
      <% end %>
