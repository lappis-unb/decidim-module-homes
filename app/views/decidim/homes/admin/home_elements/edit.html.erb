<div class="card">
  <div class="card-divider">
    <h2 class="card-title">Editar o <%= @home_element.element_type %></h2>
  </div>

  <div class="card-section">
    <%= decidim_form_for(@home_element, url: home_element_path, method: :patch, html: { class: "form new_home_element" }) do |f| %>
      <%= render partial: "#{@home_element.element_type}", locals: { f: f } %>
      <div class="button--double form-general-submit">
        <%= f.submit "Atualizar", class: "button" %>
      </div>
    <% end %>
  </div>
</div>