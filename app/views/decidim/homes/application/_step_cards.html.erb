<div>
  <div class="blue-bp-divider <%= background %>"></div>
  <div class="step_cards-container <%= background %>">
    <div class="br-container-lg step_cards-info">
      <div class="cards-title-container">
        <h2 class="step_cards-title"><%= properties["title"] %></h2>
        <% if properties["subtitle"]%>
          <h3 class="step_cards-subtitle"><%= properties["subtitle"] %></h3>
        <% end %>
      </div>
      <div class="step_cards-content">
        <% properties["items"].try(:each) do |card| %>
          <div class="step_card <%= card["active"] ? "active" : "" %>">
            <div class="step_card_info-container">
              <div class="step_icon-container fa-solid <%= card["icon"] %>"></div>
              <div class="step_info-text">
                <p><%= card["step"] %></p>
                <h3><%= card["title"] %></h3>
              </div>
            </div>

            <div class="step_card-date">
              <i class="fa-solid fa-calendar" style="font-size: 1rem; color: #0c326f;"></i>
              <p>
                <% if get_month(card["start_date"]) == get_month(card["end_date"]) && card["start_date"].split("/")[2] == card["end_date"].split("/")[2] %>
                  <%= get_month(card["start_date"]) %> de <%= card["start_date"].split("/")[2] %>
                <% end %>
                <% if get_month(card["start_date"]) != get_month(card["end_date"]) %>
                  <%= get_month(card["start_date"]) %> e <%= get_month(card["end_date"]) %> de <%= card["start_date"].split("/")[2] %>
                <% end %>
              </p>
            </div>

            <p class="step_card-description">
              <%= card["description"] %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="blue-bp-divider <%= background %>"></div>
</div>