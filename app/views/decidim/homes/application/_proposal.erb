<div class="br-container-lg proposal-container-component">
  <% @proposals = fetch_random_proposals(properties["proposal_id"]) %>
  <div class="br_card_proposal_container">
    <div class="br_card_proposal_header">
      <h1><%= properties["title"] =%></h1>
      <p><%= properties["description"] =%></p>
    </div>
    <div class="card-grid card_proposal_component">
      <% @proposals.each do |proposal| %>
        <%= card_for proposal %>
      <% end %>
    </div>
    <%= link_to "Acessar todas as #{resource_title(@proposals.first.component)}", main_component_path(@proposals.first.component), class: "button button_proposal_component" %>
  </div>
</div>
<style>
  .proposal-container-component{
    background-color: var(--gray-2);
    padding: 2rem 0;
  }

  .br_card_proposal_header{
    display: flex;
    flex-direction: column;
    align-self: self-start;
    margin-left: 5rem;
    gap: 1rem;
  }

  .card_proposal_component {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    width: 100%;
    gap: 1.5rem;
  }

  .card_proposal_component div {
    max-width: 400px;
    border-radius: 0.5rem;
  }

  .button_proposal_component {
    background-color: var(--gray-90);
  }

  .br_card_proposal_container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;

    h1 {
      font-size: 2rem;
      font-weight: bold;
      margin: 0;
      color: var(--gray-90);
    }
    p {
      font-size: 1.2rem;
      color: var(--gray-60);
    }
  }
</style>