<div class="br-container-lg">
  <h1>Proposals</h1>
  <% @proposals = fetch_random_proposals(properties["proposal_id"]) %>
  <div class="card-grid card_proposal_component">
    <% @proposals.each do |proposal| %>
      <%= card_for proposal %>
    <% end %>
  </div>
  <%= link_to "Ver mais propostas", main_component_path(@proposals.first.component), class: "button" %>
</div>
<style>
  .card_proposal_component {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
  }

  .card_proposal_component div {
    max-width: 400px;
  }
</style>